<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".VTTestMainActivity" >

    <TextView
        android:id="@+id/id_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFFFFFF"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_wind_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_wind_speed"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFFFFFF"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_ocean_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFFFFFF"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_ocean_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_ocean_speed"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFFFFFF"
        android:textSize="11sp" />

    <com.example.vttest.graphics_engine.views.DirectionWheelView
        android:id="@+id/id_wind_wheel"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_wind_direction"
        android:layout_margin="5dip" />

    <com.example.vttest.graphics_engine.views.DirectionWheelView
        android:id="@+id/id_ocean_wheel"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_ocean_direction"
        android:layout_margin="5dip" />

    <com.example.vttest.graphics_engine.views.ForcesView
        android:id="@+id/id_forces"
        android:layout_width="250dip"
        android:layout_height="250dip"
        android:layout_below="@id/id_ocean_wheel"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dip" />
    
    <TextView
        android:id="@+id/id_wind_on_sail_force_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_forces"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFF00FF"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_wind_on_sail_force_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/id_wind_on_sail_force_module"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFF00FF"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_ocean_on_hull_force_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_forces"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FF00FF00"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_ocean_on_hull_force_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_ocean_on_hull_force_module"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FF00FF00"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_ocean_on_keel_force_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_forces"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFFFF00"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/id_ocean_on_keel_force_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_ocean_on_keel_force_module"
        android:layout_margin="5dip"
        android:text="@string/parameter_base"
        android:textColor="#FFFFFF00"
        android:textSize="11sp" />

    <Button
        android:id="@+id/id_sail_left"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_wind_on_sail_force_direction"
        android:layout_below="@+id/id_wind_on_sail_force_direction"
        android:text="@string/left" 
        android:textSize="11sp" />

    <Button
        android:id="@+id/id_sail_right"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_wind_on_sail_force_direction"
        android:layout_toRightOf="@+id/sail_text_view"
        android:text="@string/right" 
        android:textSize="11sp" />

    <TextView
        android:id="@+id/sail_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/id_sail_right"
        android:layout_alignBottom="@+id/id_sail_right"
        android:layout_margin="5dip"
        android:layout_toRightOf="@+id/id_sail_left"
        android:text="@string/sail"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/id_force_on_vessel_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_force_on_vessel_module"
        android:layout_margin="5dip"
        android:layout_toRightOf="@+id/id_wind_direction"
        android:text="@string/parameter_base"
        android:textColor="#FFFFCC99"
        android:textSize="11sp" />
    
	<TextView
        android:id="@+id/id_vessel_advance_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_force_on_vessel_direction"
        android:layout_margin="5dip"
        android:layout_toRightOf="@+id/id_wind_direction"
        android:text="@string/parameter_base"
        android:textColor="#FFFFCC99"
        android:textSize="11sp" />
	
	<TextView
        android:id="@+id/id_vessel_rotation_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_vessel_advance_speed"
        android:layout_margin="5dip"
        android:layout_toRightOf="@+id/id_wind_direction"
        android:text="@string/parameter_base"
        android:textColor="#FFFFCC99"
        android:textSize="11sp" />

	<TextView
	    android:id="@+id/id_force_on_vessel_module"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/id_wind_direction"
	    android:layout_alignBottom="@+id/id_wind_direction"
	    android:layout_margin="5dip"
	    android:layout_toRightOf="@+id/id_wind_direction"
	    android:text="@string/parameter_base"
	    android:textColor="#FFFFCC00"
	    android:textSize="11sp" />
    
</RelativeLayout>